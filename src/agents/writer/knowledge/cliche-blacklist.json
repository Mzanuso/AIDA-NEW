{
  "version": "1.0.0",
  "last_updated": "2025-10-22",
  "description": "Universal clichés to avoid in ALL contexts. AI reasoning handles contextual clichés.",
  "categories": {
    "tired_openings": {
      "name": "Tired Opening Phrases",
      "patterns": [
        "are you tired of",
        "imagine if",
        "what if you could",
        "have you ever wondered",
        "in a world where",
        "once upon a time"
      ]
    },
    "fake_urgency": {
      "name": "Fake Urgency & Scarcity",
      "patterns": [
        "you won't believe",
        "the secret that",
        "what [X] doesn't want you to know",
        "this will change your life",
        "doctors hate this",
        "one simple trick"
      ]
    },
    "empty_superlatives": {
      "name": "Empty Superlatives",
      "patterns": [
        "revolutionary",
        "never seen before",
        "the best ever",
        "incredibly",
        "absolutely amazing",
        "game changer",
        "game-changing"
      ]
    },
    "vague_promises": {
      "name": "Vague Promises",
      "patterns": [
        "guaranteed results",
        "instant success",
        "effortlessly",
        "without doing anything",
        "ultimate solution",
        "the answer you've been looking for"
      ]
    },
    "overused_metaphors": {
      "name": "Overused Metaphors",
      "patterns": [
        "tip of the iceberg",
        "change the game",
        "take to the next level",
        "incredible journey",
        "jump on board",
        "don't miss the boat"
      ]
    },
    "corporate_jargon": {
      "name": "Corporate Jargon",
      "patterns": [
        "synergy",
        "think outside the box",
        "holistic approach",
        "best practice",
        "best practices",
        "ecosystem",
        "scalable",
        "end-to-end solution",
        "optimize workflow"
      ]
    },
    "social_media_cringe": {
      "name": "Social Media Cringe Phrases",
      "patterns": [
        "tap the link",
        "follow for more",
        "comment if you agree",
        "who agrees?",
        "double tap if",
        "tag someone who",
        "this is for you"
      ]
    },
    "filler_phrases": {
      "name": "Filler Phrases & Weak Language",
      "patterns": [
        "basically",
        "literally",
        "like",
        "kind of",
        "sort of",
        "you know",
        "so",
        "well"
      ]
    }
  },
  "detection_rules": {
    "case_insensitive": true,
    "partial_match": true,
    "context_override": "AI can override blacklist if phrase is intentionally ironic or deconstructed",
    "warning_threshold": "Any match triggers AI review, not automatic rejection"
  },
  "ai_reasoning_prompts": {
    "contextual_check": "Beyond this blacklist, does this phrase feel cliché in THIS specific context? Consider: industry, audience sophistication, cultural moment, ironic intent.",
    "freshness_test": "Would this phrase make an experienced creator roll their eyes? Has it been overused in similar content recently?",
    "replacement_prompt": "If cliché detected, suggest 3 fresh alternatives that convey same intent with originality."
  }
}
