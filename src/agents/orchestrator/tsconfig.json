{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@backend/utils/*": ["../../../backend/utils/*"],
      "@backend/shared/*": ["../../../backend/shared/*"],
      "@backend/config": ["../../../backend/config.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "../../../backend/utils/**/*.ts",
    "../../../backend/shared/**/*.ts",
    "../../../backend/config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
